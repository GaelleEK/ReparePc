{%  extends './base_admin.html.twig' %}


{% block CenterArray %}
    <div class="container mt-auto">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th><h2>Centres</h2></th>
        </tr>
        </thead>
        <tbody>
        {% for center in centers %}
            <tr>
                <td>{{ center.city }}</td>
                <td>{{ center.address }}</td>
                <td>{{ center.schedule }}</td>

                <td>
                    <a href="{{ path('admin_update', {id: center.id}) }}" class="btn btn-primary">Editer</a>
                    <a href="{{ path('admin_delete', {id: center.id}) }}" class="btn btn-primary">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
