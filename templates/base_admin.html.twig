<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Administration{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('styles/css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('styles/css/animate.css') }}" rel="stylesheet">
        <link href="{{ asset('styles/css/plugins.css') }}" rel="stylesheet">
        <link href="{{ asset('styles/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('styles/font-awesome-4.1.0/font-awesome.css') }}" rel="stylesheet">
        <link href="{{ asset('styles/css/pe-icons.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body id="page-top" class="index greyscale-images">
{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="master-wrapper">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand smoothie" href="{{ path("admin_home") }}">REPARE<span class="theme-accent-color"> PC</span> ONLINE</a>
                </div>
                <div class="collapse navbar-collapse" id="main-navigation">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="{{ path("admin_create") }}">Ajouter un centre</a>
                        </li>
                        <li class="dropdown">
                            <a href="{{ path("admin_date") }}">Voir les messages recus</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <section class="silver-bg">
            <div class="section-inner">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-center mb100">
                            {% block CenterArray %}{% endblock %}
                        </div>
                    </div>
                    {% block form_admin %}{% endblock %}
                    {% block ContactArray %}{% endblock %}
                </div>
            </div>
        </section>
        {% block map %}{% endblock %}
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/plugins.js') }}"></script>
    <script src="{{ asset('js/init.js') }}"></script>

{% endblock %}
</body>
</html>